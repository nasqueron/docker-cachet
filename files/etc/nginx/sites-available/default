server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name _;

	root /var/wwwroot/default/public;

	index index.html index.php index.htm;

	location / {
                try_files $uri $uri/ /index.php?$query_string =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass 127.0.0.1:9000;
	}

	location ~ /\.ht {
		deny all;
	}
}
